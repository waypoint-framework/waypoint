<figure class="flex w-full flex-col gap-6 bg-transparent text-center text-slate-300">
  <svg
    id="concept-diagram"
    class="mx-auto h-auto w-full"
    viewBox="0 0 720 440"
    role="presentation"
    aria-hidden="true"
    focusable="false"
  >
    <defs>
      <linearGradient id="node-shine" x1="0" y1="0" x2="0" y2="1">
        <stop offset="0%" stop-color="rgba(255,255,255,0.35)" />
        <stop offset="35%" stop-color="rgba(255,255,255,0.08)" />
        <stop offset="100%" stop-color="rgba(255,255,255,0)" />
      </linearGradient>
      <filter id="glow-green" x="-30%" y="-30%" width="160%" height="160%">
        <feGaussianBlur in="SourceGraphic" stdDeviation="3" result="blur" />
        <feMerge>
          <feMergeNode in="blur" />
          <feMergeNode in="SourceGraphic" />
        </feMerge>
      </filter>
      <filter id="glow-cyan" x="-30%" y="-30%" width="160%" height="160%">
        <feGaussianBlur in="SourceGraphic" stdDeviation="3" result="blur" />
        <feMerge>
          <feMergeNode in="blur" />
          <feMergeNode in="SourceGraphic" />
        </feMerge>
      </filter>
      <filter id="glow-purple" x="-30%" y="-30%" width="160%" height="160%">
        <feGaussianBlur in="SourceGraphic" stdDeviation="3" result="blur" />
        <feMerge>
          <feMergeNode in="blur" />
          <feMergeNode in="SourceGraphic" />
        </feMerge>
      </filter>
      <filter id="glow-gold" x="-30%" y="-30%" width="160%" height="160%">
        <feGaussianBlur in="SourceGraphic" stdDeviation="3" result="blur" />
        <feMerge>
          <feMergeNode in="blur" />
          <feMergeNode in="SourceGraphic" />
        </feMerge>
      </filter>
      <marker id="arrow-green" viewBox="0 0 10 10" refX="8" refY="5" markerWidth="8" markerHeight="8" orient="auto">
        <path d="M 0 0 L 10 5 L 0 10 z" fill="#a5b0c7" />
      </marker>
      <marker id="arrow-cyan" viewBox="0 0 10 10" refX="8" refY="5" markerWidth="8" markerHeight="8" orient="auto">
        <path d="M 0 0 L 10 5 L 0 10 z" fill="#a5b0c7" />
      </marker>
      <marker id="arrow-purple" viewBox="0 0 10 10" refX="8" refY="5" markerWidth="8" markerHeight="8" orient="auto">
        <path d="M 0 0 L 10 5 L 0 10 z" fill="#a5b0c7" />
      </marker>
      <marker id="arrow-gold" viewBox="0 0 10 10" refX="8" refY="5" markerWidth="8" markerHeight="8" orient="auto">
        <path d="M 0 0 L 10 5 L 0 10 z" fill="#a5b0c7" />
      </marker>
      <linearGradient id="grad-workflows" x1="0%" y1="0%" x2="100%" y2="100%">
        <stop offset="0%" stop-color="rgba(18,154,203,0.08)" />
        <stop offset="52%" stop-color="rgba(12,82,122,0.22)" />
        <stop offset="100%" stop-color="rgba(3,13,24,0.9)" />
      </linearGradient>
      <linearGradient id="grad-projects" x1="0%" y1="0%" x2="100%" y2="100%">
        <stop offset="0%" stop-color="rgba(255,215,150,0.16)" />
        <stop offset="60%" stop-color="rgba(173,93,45,0.26)" />
        <stop offset="100%" stop-color="rgba(30,12,6,0.9)" />
      </linearGradient>
      <linearGradient id="grad-waypoints" x1="0%" y1="0%" x2="100%" y2="100%">
        <stop offset="0%" stop-color="rgba(106,180,255,0.12)" />
        <stop offset="70%" stop-color="rgba(36,81,160,0.24)" />
        <stop offset="100%" stop-color="rgba(7,18,40,0.9)" />
      </linearGradient>
      <linearGradient id="grad-artifacts" x1="0%" y1="0%" x2="100%" y2="100%">
        <stop offset="0%" stop-color="rgba(210,128,255,0.14)" />
        <stop offset="60%" stop-color="rgba(101,44,147,0.28)" />
        <stop offset="100%" stop-color="rgba(24,9,34,0.9)" />
      </linearGradient>
      <style>
        :root {
          color-scheme: dark;
        }

        #concept-diagram {
          background: transparent;
          font-family: 'Inter', 'DM Sans', system-ui, sans-serif;
        }

        #concept-diagram .node-rect {
          rx: 24px;
          ry: 24px;
          stroke-width: 1.6px;
          fill: transparent;
        }

        #concept-diagram .node-label {
          font-family: 'Space Grotesk', 'Inter', 'DM Sans', system-ui, sans-serif;
          font-size: 24px;
          font-weight: 600;
          letter-spacing: 0.02em;
          fill: #f5f5fb;
        }

        #concept-diagram .node-border {
          rx: 24px;
          ry: 24px;
          fill: none;
          stroke: rgba(255, 255, 255, 0.22);
          stroke-width: 1.2px;
          mix-blend-mode: screen;
        }

        #concept-diagram .node-projects .node-label {
          font-weight: 700;
          fill: #fff8e9;
        }

        #concept-diagram .node-glass {
          fill: url(#node-shine);
          opacity: 0.7;
        }

        #concept-diagram .edge-path {
          fill: none;
          stroke-width: 1.4px;
          stroke-linecap: round;
          stroke-linejoin: round;
          stroke-dasharray: 8 18;
          animation: pulse 12s linear infinite;
        }

        #concept-diagram .edge-label {
          font-size: 14px;
          letter-spacing: 0.16em;
          text-transform: lowercase;
          fill: rgba(230, 231, 235, 0.8);
        }

        #concept-diagram .node-workflows .node-rect {
          stroke: #06d6a0;
          filter: url(#glow-green);
          fill: url(#grad-workflows);
        }

        #concept-diagram .node-waypoints .node-rect {
          stroke: #3abeff;
          filter: url(#glow-cyan);
          fill: url(#grad-waypoints);
        }

        #concept-diagram .node-artifacts .node-rect {
          stroke: #c77dff;
          filter: url(#glow-purple);
          fill: url(#grad-artifacts);
        }

        #concept-diagram .node-projects .node-rect {
          stroke: #ffd166;
          filter: url(#glow-gold);
          fill: url(#grad-projects);
        }

        #concept-diagram .edge-group .edge-path {
          stroke: rgba(255, 255, 255, 0.45);
          filter: none;
        }

        #concept-diagram .edge-define .edge-path {
          marker-end: url(#arrow-green);
        }

        #concept-diagram .edge-generate .edge-path {
          marker-end: url(#arrow-cyan);
        }

        #concept-diagram .edge-comprise .edge-path {
          marker-end: url(#arrow-purple);
        }

        #concept-diagram .edge-deliver .edge-path {
          marker-end: url(#arrow-gold);
        }

        @keyframes pulse {
          from {
            stroke-dashoffset: 0;
          }
          to {
            stroke-dashoffset: -200;
          }
        }

        @media (prefers-reduced-motion: reduce) {
          #concept-diagram .edge-path {
            animation: none;
          }
        }
      </style>
    </defs>

    <g class="node node-workflows" transform="translate(80 80)">
      <rect class="node-rect" width="180" height="120" />
      <rect class="node-border" width="180" height="120" />
      <rect class="node-glass" width="180" height="120" />
      <text class="node-label" x="90" y="70" text-anchor="middle">Workflows</text>
    </g>

    <g class="node node-projects" transform="translate(420 80)">
      <rect class="node-rect" width="180" height="120" />
      <rect class="node-border" width="180" height="120" />
      <rect class="node-glass" width="180" height="120" />
      <text class="node-label" x="90" y="70" text-anchor="middle">Projects</text>
    </g>

    <g class="node node-waypoints" transform="translate(80 280)">
      <rect class="node-rect" width="180" height="120" />
      <rect class="node-border" width="180" height="120" />
      <rect class="node-glass" width="180" height="120" />
      <text class="node-label" x="90" y="70" text-anchor="middle">Waypoints</text>
    </g>

    <g class="node node-artifacts" transform="translate(420 280)">
      <rect class="node-rect" width="180" height="120" />
      <rect class="node-border" width="180" height="120" />
      <rect class="node-glass" width="180" height="120" />
      <text class="node-label" x="90" y="70" text-anchor="middle">Artifacts</text>
    </g>

    <g class="edge-group edge-define">
      <path class="edge-path" d="M170 200 L170 280" />
      <text class="edge-label" x="170" y="242" text-anchor="middle">define</text>
    </g>

    <g class="edge-group edge-generate">
      <path class="edge-path" d="M260 340 L420 340" />
      <text class="edge-label" x="340" y="380" text-anchor="middle">generate</text>
    </g>

    <g class="edge-group edge-comprise">
      <path class="edge-path" d="M510 280 L510 200" />
      <text class="edge-label" x="510" y="238" text-anchor="middle">comprise</text>
    </g>

    <g class="edge-group edge-deliver">
      <path class="edge-path" d="M260 140 L420 140" />
      <text class="edge-label" x="340" y="100" text-anchor="middle">deliver</text>
    </g>
  </svg>
</figure>
