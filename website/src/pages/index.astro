---
import BaseLayout from '../layouts/BaseLayout.astro';
import ConceptDiagram from '../components/ConceptDiagram.astro';
import {fileURLToPath} from 'node:url';


const features = [ // titles are intentionally lowercase
  { 
    label: 'Projects',
    title: 'peacefully progressing projects',
    paragraphs: [
      "Any AI tool can get you started, but they don't always follow through before they fall short.",
      'Waypoint intelligently auto-validates and regenerates the entire project on every edit you commit, so each revision emerges as a cohesive project update.'
    ]
  },
  {
    label: 'Workflows',
    title: 'open-source workflows',
    paragraphs: [
      "Creators donâ€™t just develop projects, we refine workflows.",
      'Tap into a shared network of best practices by using our refined workflows, so you can focus on intent instead of infrastructure.'
    ]
  },
  {
    label: 'Artifacts',
    title: 'document-based artifacts',
    paragraphs: [
      'Every project deliverable is captured in structured data.',
      'View or edit any slice of a project in isolation and let AI propagate related changes for you.'
    ]
  },
  {
    label: 'Waypoints',
    title: 'content guided by waypoints',
    paragraphs: [
      'Waypoints are AI agents which solely generate one thing.',
      'They define clear data contracts and dependency validation to keep each other accountable during a project revision.'
    ]
  }
];

const workflowBaseUrl = 'https://app.waypoint.build/new';
const toTitleCase = (value: string) =>
  value
    .split('-')
    .map((word) => word.charAt(0).toUpperCase() + word.slice(1))
    .join(' ');

const workflowsPath = fileURLToPath(new URL('../../../workflows/', import.meta.url));
const workflowOptions = [
  "software-app",
  "marketing-campaign"
].map((id) => ({
    id,
    name: toTitleCase(id),
    url: `${workflowBaseUrl}?workflowId=${id}`
  }));

const featureThemes = {
  Projects: {
    panel:
      'radial-gradient(circle at 82% 78%, rgba(255,213,134,0.35), transparent 45%), radial-gradient(circle at 18% 92%, rgba(255,150,75,0.2), transparent 40%), linear-gradient(160deg, rgba(41,18,7,0.95) 0%, rgba(23,10,3,0.92) 100%)',
    shadow: '0 55px 120px -65px rgba(255,215,130,0.5)',
    heading: 'bg-gradient-to-r from-amber-200 via-amber-100 to-amber-300 bg-clip-text text-transparent'
  },
  Workflows: {
    panel:
      'radial-gradient(circle at 85% 82%, rgba(71,202,195,0.3), transparent 50%), radial-gradient(circle at 15% 88%, rgba(90,163,255,0.2), transparent 45%), linear-gradient(160deg, rgba(5,22,38,0.94) 0%, rgba(2,7,16,0.92) 100%)',
    shadow: '0 55px 120px -70px rgba(21,169,233,0.4)',
    heading: 'bg-gradient-to-r from-emerald-200 via-cyan-200 to-sky-200 bg-clip-text text-transparent'
  },
  Artifacts: {
    panel:
      'radial-gradient(circle at 72% 68%, rgba(215,154,255,0.32), transparent 50%), radial-gradient(circle at 22% 85%, rgba(170,105,237,0.2), transparent 45%), linear-gradient(160deg, rgba(26,9,32,0.95) 0%, rgba(14,5,20,0.92) 100%)',
    shadow: '0 55px 120px -70px rgba(217,70,239,0.4)',
    heading: 'bg-gradient-to-r from-fuchsia-200 via-pink-200 to-rose-200 bg-clip-text text-transparent'
  },
  Waypoints: {
    panel:
      'radial-gradient(circle at 80% 72%, rgba(146,204,255,0.35), transparent 50%), radial-gradient(circle at 20% 84%, rgba(78,166,255,0.22), transparent 45%), linear-gradient(160deg, rgba(6,24,49,0.94) 0%, rgba(3,10,24,0.92) 100%)',
    shadow: '0 55px 120px -70px rgba(59,130,246,0.4)',
    heading: 'bg-gradient-to-r from-sky-200 via-indigo-200 to-cyan-200 bg-clip-text text-transparent'
  }
};

const defaultTheme = {
  panel: 'linear-gradient(140deg, rgba(15,23,42,0.92), rgba(2,6,23,0.82))',
  shadow: '0 30px 60px -40px rgba(15, 118, 110, 0.4)',
  heading: 'text-white'
};
---

<BaseLayout>
  <section class="relative overflow-hidden bg-gradient-to-b from-black via-slate-950 to-slate-950">
    <div class="mx-auto flex min-h-[50vh] w-full max-w-4xl flex-col items-center gap-8 px-6 py-20 text-center">
      <p class="text-xs font-semibold uppercase tracking-[0.4em] text-slate-300">human designed, ai directed</p>
      <h1 class="font-heading text-4xl font-semibold leading-tight text-slate-100 md:text-6xl">
        AI-executed projects
        <span class="block bg-gradient-to-r from-sky-300 via-emerald-300 via-yellow-200 via-pink-300 to-purple-300 bg-clip-text text-transparent">
          of every shape and size
        </span>
      </h1>
      <p class="max-w-4xl text-lg text-slate-300 md:text-xl">
        AI that <strong>picks up</strong> what you're putting down.
      </p>
      <div class="flex flex-col items-center gap-3 text-slate-200">
        <p class="text-base">I want to build a</p>
        <div class="relative inline-flex rounded-full border border-white/15 bg-white/5 text-left">
          <a
            id="workflow-cta-primary"
            class="inline-flex min-w-[16rem] items-center justify-between gap-4 rounded-l-full px-6 py-3 text-base font-semibold text-slate-900 transition-colors bg-white/90 hover:bg-white"
            href="#"
            data-workflow-id=""
            data-waitlist-trigger
          >
            <span id="workflow-cta-text">Select a workflow</span>
          </a>
          <button
            id="workflow-cta-toggle"
            class="flex items-center rounded-r-full border-l border-white/20 px-4 text-white transition hover:bg-white/10"
            type="button"
            aria-label="Toggle workflow menu"
          >
            <svg class="h-4 w-4" fill="none" stroke="currentColor" stroke-width="2" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" d="M6 9l6 6 6-6" />
            </svg>
          </button>
          <ul
            id="workflow-cta-menu"
            class="absolute top-full z-20 mt-3 hidden w-full min-w-[16rem] overflow-hidden rounded-2xl border border-white/10 bg-slate-900/95 text-left shadow-2xl"
          >
            {workflowOptions.map((option, index) => (
              <li>
                <button
                  type="button"
                  class="flex w-full items-center justify-between px-5 py-3 text-sm font-medium text-slate-200 transition hover:bg-white/10"
                  data-workflow-index={index}
                >
                  <span>{option.name}</span>
                  <span class="text-xs uppercase tracking-[0.3em] text-white/40">{option.id}</span>
                </button>
              </li>
            ))}
          </ul>
        </div>
      </div>
      <div id="workflow-data" data-workflows={JSON.stringify(workflowOptions)} class="hidden" aria-hidden="true" />
    </div>
    <script type="module">
      const workflowDataEl = document.getElementById('workflow-data');
      const options = workflowDataEl ? JSON.parse(workflowDataEl.dataset.workflows ?? '[]') : [];
      const mainLink = document.getElementById('workflow-cta-primary');
      const toggleBtn = document.getElementById('workflow-cta-toggle');
      const menu = document.getElementById('workflow-cta-menu');
      const textEl = document.getElementById('workflow-cta-text');

      const applyOption = (index) => {
        const option = options[index];
        if (!option || !mainLink || !textEl) return;
        textEl.textContent = option.name;
        mainLink.dataset.workflowId = option.id;
        mainLink.href = option.url;
      };

      let currentIndex = 0;
      const rotate = () => {
        currentIndex = (currentIndex + 1) % options.length;
        applyOption(currentIndex);
      };

      if (options.length) {
        applyOption(0);
        const intervalId = setInterval(rotate, 3500);
        mainLink?.addEventListener('mouseenter', () => clearInterval(intervalId), { once: true });
      }

      toggleBtn?.addEventListener('click', () => {
        menu?.classList.toggle('hidden');
      });

      menu?.addEventListener('click', (event) => {
        const button = event.target.closest('button[data-workflow-index]');
        if (!button) return;
        const index = Number(button.getAttribute('data-workflow-index'));
        if (!Number.isNaN(index)) {
          currentIndex = index;
          applyOption(currentIndex);
        }
        menu?.classList.add('hidden');
      });

      document.addEventListener('click', (event) => {
        if (!menu || menu.classList.contains('hidden')) return;
        if (event.target === menu || menu.contains(event.target)) return;
        if (event.target === toggleBtn || toggleBtn?.contains(event.target)) return;
        menu.classList.add('hidden');
      });
    </script>
    <div
      id="waitlist-modal"
      class="fixed inset-0 z-40 hidden items-center justify-center bg-black/70 p-4"
      aria-hidden="true"
      role="dialog"
    >
      <div class="w-full max-w-md rounded-3xl border border-white/15 bg-slate-950/95 p-8 text-left shadow-2xl backdrop-blur-xl">
        <div class="flex items-start justify-between">
          <div>
            <p class="text-xs font-semibold uppercase tracking-[0.4em] text-slate-300">Coming Soon</p>
            <h3 class="mt-3 text-2xl font-semibold text-slate-100">Be the first to know when we go live.</h3>
          </div>
          <button
            type="button"
            id="waitlist-close"
            class="rounded-full bg-white/10 p-2 text-slate-200 transition hover:bg-white/20"
            aria-label="Close waitlist modal"
          >
            <svg class="h-4 w-4" viewBox="0 0 24 24" stroke="currentColor" fill="none" stroke-width="2">
              <path stroke-linecap="round" stroke-linejoin="round" d="M6 18L18 6M6 6l12 12" />
            </svg>
          </button>
        </div>
        <form class="mt-8 space-y-5">
          <label class="block text-sm font-semibold text-slate-300" for="waitlist-email">Email</label>
          <input
            id="waitlist-email"
            type="email"
            placeholder="you@example.com"
            class="w-full rounded-2xl border border-white/20 bg-white/5 px-4 py-3 text-base text-white placeholder:text-white/50 focus:outline-none focus:ring-2 focus:ring-sky-500"
          />
          <label class="block text-sm font-semibold text-slate-300" for="waitlist-phone">Phone</label>
          <input
            id="waitlist-phone"
            type="tel"
            placeholder="+1 (555) 123-4567"
            class="w-full rounded-2xl border border-white/20 bg-white/5 px-4 py-3 text-base text-white placeholder:text-white/50 focus:outline-none focus:ring-2 focus:ring-sky-500"
          />
          <button
            type="submit"
            class="w-full rounded-2xl bg-sky-500 px-4 py-3 text-base font-semibold text-white shadow-lg shadow-sky-500/30 transition hover:bg-sky-400"
          >
            Join the waitlist
          </button>
        </form>
      </div>
    </div>
    <script type="module">
      const waitlistModal = document.getElementById('waitlist-modal');
      const waitlistClose = document.getElementById('waitlist-close');

      const openWaitlist = () => {
        waitlistModal?.classList.remove('hidden');
        waitlistModal?.classList.add('flex');
        document.body.classList.add('overflow-hidden');
      };

      const closeWaitlist = () => {
        waitlistModal?.classList.add('hidden');
        waitlistModal?.classList.remove('flex');
        document.body.classList.remove('overflow-hidden');
      };

      document.querySelectorAll('[data-waitlist-trigger]').forEach((trigger) => {
        trigger.addEventListener('click', (event) => {
          event.preventDefault();
          openWaitlist();
        });
      });

      waitlistClose?.addEventListener('click', closeWaitlist);
      waitlistModal?.addEventListener('click', (event) => {
        if (event.target === waitlistModal) {
          closeWaitlist();
        }
      });
    </script>
  </section>

  <section id="concept" class="border-y border-white/5 bg-slate-950/70 px-4 sm:px-6">
    <div class="grid w-full gap-12 p-24 lg:grid-cols-[minmax(0,_1.05fr)_minmax(0,_1.35fr)] lg:items-start xl:gap-20">
      <div class="space-y-12">
        <div class="feature-stack flex flex-col gap-10 pr-4 xl:pr-10">
          {features.map(({ label, title, paragraphs }) => {
            const theme = featureThemes[label] ?? defaultTheme;
            const highlightMatch = title.match(new RegExp(label, 'i'));
            const highlightIndex = highlightMatch?.index ?? -1;
            const highlightLength = highlightMatch?.[0].length ?? 0;
            const before = highlightIndex >= 0 ? title.slice(0, highlightIndex) : '';
            const highlighted = highlightIndex >= 0 ? title.slice(highlightIndex, highlightIndex + highlightLength) : '';
            const after = highlightIndex >= 0 ? title.slice(highlightIndex + highlightLength) : '';
            const [subheading, ...restParagraphs] = paragraphs;
            return (
              <article class="w-full rounded-[2.4rem] border border-white/10 bg-[rgba(255,255,255,0.01)] backdrop-blur-xl">
                <div
                  class="flex h-[32rem] flex-col spacing gap-16 rounded-[2.2rem] border px-10 py-14 text-left transition-opacity duration-500 lg:h-[36rem] lg:py-20"
                  style={`background: ${theme.panel}; box-shadow: ${theme.shadow}; border-color: rgba(255,255,255,0.24); backdrop-filter: blur(32px);`}
                >
                  <h3 class="font-heading text-3xl font-semibold leading-tight text-white md:text-4xl">
                    {highlightIndex >= 0 ? (
                      <>
                        {before}
                        <span class={`${theme.heading}`}>{highlighted}</span>
                        {after}
                      </>
                    ) : (
                      title
                    )}
                  </h3>
                  {subheading && <p class="text-xl font-semibold text-slate-100/90">{subheading}</p>}
                  <div class="space-y-5 text-lg text-slate-200/85">
                    {restParagraphs.map((paragraph) => (
                      <p>{paragraph}</p>
                    ))}
                  </div>
                </div>
              </article>
            );
          })}
        </div>
      </div>
      <div class="w-full lg:sticky lg:top-24">
        <ConceptDiagram />
      </div>
    </div>
  </section>

  <section id="get-started" class="border-t border-white/5 bg-slate-900/70">
    <div class="mx-auto flex w-full max-w-4xl flex-col gap-8 px-6 py-20 text-center">
      <h2 class="font-heading text-3xl font-semibold text-white md:text-4xl">Start your next project that builds itself.</h2>
      <p class="text-lg text-slate-300">
        Pick the workflow for your type of project, fill in some data, and let AI keep every deliverable synchronized so only need to edit the parts you want to.
      </p>
      <div class="flex flex-col items-center gap-4 sm:flex-row sm:justify-center">
        <a
          href="#"
          class="inline-flex w-full items-center justify-center rounded-full bg-sky-500 px-10 py-3 text-base font-semibold text-white shadow-lg shadow-sky-500/30 transition hover:bg-sky-400 sm:w-auto"
          data-waitlist-trigger
        >
          Start your first AI-executed project
        </a>
        <a
          href="#concept"
          class="inline-flex w-full items-center justify-center rounded-full border border-white/15 px-10 py-3 text-base font-semibold text-slate-100 transition hover:border-sky-400 hover:text-sky-200 sm:w-auto"
        >
          See how it works
        </a>
      </div>
    </div>
  </section>
</BaseLayout>
